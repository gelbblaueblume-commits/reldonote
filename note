    <main>
        <header>
            <div>
                <h2 id="view-title">Heutige Notizen</h2>
                <div id="main-date">Samstag, 7. Februar 2026</div>
            </div>
            <div class="clock-box">
                <div id="main-clock">14:30</div>
                <div style="color:var(--accent); font-size:0.7rem; font-weight:800">SYSTEM ONLINE</div>
            </div>
        </header>

        <div class="workspace">
            <div class="split-view">
                <div class="section-box">
                    <input type="text" id="note-title" class="editor-title" placeholder="Titel eingeben...">
                    <textarea id="note-body" class="editor-body" placeholder="Was besch√§ftigt dich heute?"></textarea>
                    <div style="display:flex; justify-content:space-between; align-items:center; margin-top:20px;">
                        <span id="char-count" style="font-size:0.8rem; color:var(--text-low)">0 Zeichen</span>
                        <button class="btn-main" onclick="app.saveNote()">Eintrag sichern</button>
                    </div>
                </div>

                <div class="section-box">
                    <div class="todo-header">‚úÖ Daily To-Do</div>
                    <div class="todo-input-box">
                        <input type="text" id="todo-in" class="todo-input" placeholder="Neue Aufgabe...">
                        <button class="btn-main" style="padding:10px" onclick="app.addTodo()">+</button>
                    </div>
                    <ul class="todo-list" id="todo-list">
                        </ul>
                </div>
            </div>

            <div id="entries-display" class="entries-grid">
                </div>
        </div>
    </main>

    <script>
        class ReldoEngine {
            constructor() {
                this.db = JSON.parse(localStorage.getItem('reldo_v6_db')) || { notes: [], todos: [] };
                this.selectedDate = new Date().toLocaleDateString('de-DE');
                this.init();
            }

            init() {
                this.renderAll();
                this.startClock();
                this.renderCalendar();
                
                document.getElementById('note-body').addEventListener('input', (e) => {
                    document.getElementById('char-count').innerText = `${e.target.value.length} Zeichen`;
                });
            }

            // --- NOTE SYSTEM ---
            saveNote() {
                const title = document.getElementById('note-title').value || 'Unbenannt';
                const body = document.getElementById('note-body').value;
                if(!body) return;

                const note = {
                    id: Date.now(),
                    date: this.selectedDate,
                    title: title,
                    body: body,
                    fullDate: new Date().toLocaleString()
                };

                this.db.notes.unshift(note);
                this.sync();
                this.clearEditor();
            }

            deleteNote(id) {
                this.db.notes = this.db.notes.filter(n => n.id !== id);
                this.sync();
            }

            // --- TODO SYSTEM ---
            addTodo() {
                const val = document.getElementById('todo-in').value;
                if(!val) return;
                this.db.todos.push({ id: Date.now(), text: val, done: false });
                document.getElementById('todo-in').value = '';
                this.sync();
            }

            toggleTodo(id) {
                const todo = this.db.todos.find(t => t.id === id);
                if(todo) todo.done = !todo.done;
                this.sync();
            }

            deleteTodo(id) {
                this.db.todos = this.db.todos.filter(t => t.id !== id);
                this.sync();
            }

            // --- CALENDAR LOGIC ---
            renderCalendar() {
                const grid = document.getElementById('cal-grid');
                const title = document.getElementById('cal-month');
                grid.innerHTML = '';
                
                const now = new Date();
                const monthNames = ["Januar", "Februar", "M√§rz", "April", "Mai", "Juni", "Juli", "August", "September", "Oktober", "November", "Dezember"];
                title.innerText = `${monthNames[now.getMonth()]} ${now.getFullYear()}`;

                ['Mo','Di','Mi','Do','Fr','Sa','So'].forEach(d => {
                    grid.innerHTML += `<div class="cal-weekday">${d}</div>`;
                });

                const firstDay = new Date(now.getFullYear(), now.getMonth(), 1).getDay();
                const startPoint = firstDay === 0 ? 6 : firstDay - 1;
                const daysInMonth = new Date(now.getFullYear(), now.getMonth() + 1, 0).getDate();

                for(let i=0; i<startPoint; i++) grid.innerHTML += `<div></div>`;

                for(let d=1; d<=daysInMonth; d++) {
                    const dateStr = `${d < 10 ? '0'+d : d}.${(now.getMonth()+1) < 10 ? '0'+(now.getMonth()+1) : (now.getMonth()+1)}.${now.getFullYear()}`;
                    const isToday = d === now.getDate() ? 'today' : '';
                    const isSelected = dateStr === this.selectedDate ? 'selected' : '';
                    
                    const cell = document.createElement('div');
                    cell.className = `cal-cell ${isToday} ${isSelected}`;
                    cell.innerText = d;
                    cell.onclick = () => this.selectDate(dateStr);
                    grid.appendChild(cell);
                }
            }

            selectDate(date) {
                this.selectedDate = date;
                document.getElementById('view-title').innerText = `Notizen vom ${date}`;
                this.renderCalendar();
                this.renderAll();
            }

            // --- UI RENDERING ---
            renderAll() {
                // Render Todos
                const todoList = document.getElementById('todo-list');
                todoList.innerHTML = '';
                this.db.todos.forEach(t => {
                    const li = document.createElement('li');
                    li.className = `todo-item ${t.done ? 'done' : ''}`;
                    li.innerHTML = `
                        <input type="checkbox" ${t.done ? 'checked' : ''} onclick="app.toggleTodo(${t.id})">
                        <span style="flex:1">${t.text}</span>
                        <span onclick="app.deleteTodo(${t.id})" style="color:#ef4444; cursor:pointer; font-size:0.8rem">‚úï</span>
                    `;
                    todoList.appendChild(li);
                });

                // Render Notes for selected date
                const entries = document.getElementById('entries-display');
                entries.innerHTML = '';
                const filtered = this.db.notes.filter(n => n.date === this.selectedDate);
                
                filtered.forEach(n => {
                    entries.innerHTML += `
                        <div class="entry-card">
                            <div style="display:flex; justify-content:space-between">
                                <h4>${n.title}</h4>
                                <span onclick="app.deleteNote(${n.id})" style="cursor:pointer">üóëÔ∏è</span>
                            </div>
                            <p>${n.body}</p>
                            <span class="entry-date">${n.fullDate}</span>
                        </div>
                    `;
                });
            }

            sync() {
                localStorage.setItem('reldo_v6_db', JSON.stringify(this.db));
                this.renderAll();
            }

            clearEditor() {
                document.getElementById('note-title').value = '';
                document.getElementById('note-body').value = '';
                document.getElementById('char-count').innerText = '0 Zeichen';
            }

            startClock() {
                const update = () => {
                    const n = new Date();
                    document.getElementById('main-clock').innerText = n.toLocaleTimeString('de-DE', {hour: '2-digit', minute:'2-digit'});
                    document.getElementById('main-date').innerText = n.toLocaleDateString('de-DE', {weekday: 'long', day: 'numeric', month: 'long', year: 'numeric'});
                };
                setInterval(update, 1000); update();
            }

            export() {
                const blob = new Blob([JSON.stringify(this.db)], {type: 'application/json'});
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url; a.download = 'reldo_backup.json'; a.click();
            }

            reset() {
                if(confirm("Alle Daten unwiderruflich l√∂schen?")) {
                    localStorage.removeItem('reldo_v6_db');
                    location.reload();
                }
            }
        }

        const app = new ReldoEngine();
    </script>
</body>
</html>
